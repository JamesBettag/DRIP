<!doctype html>
<html lang="en"> 
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="Account management page">
    <meta name="Tad, James, Mathew">
    <link rel="icon" href="/docs/4.0/assets/img/favicons/favicon.ico">
    <title>Account</title>
    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/dashboard/">
    <!-- Bootstrap core CSS -->
    <link href="http://leia.cs.spu.edu:3001/source/css/min" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/dashboard.css">
    <!-- Custom styles for this template -->
    <link href="http://leia.cs.spu.edu:3001/source/css/dash" rel="stylesheet">
  </head>
  
  
  <body>
    <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0">
      <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="/index">DRIP</a>
      <ul class="navbar-nav px-3">
        <li class="nav-item text-nowrap">
          <form action="/logout?_method=DELETE" method="POST">
            <a onclick="this.closest('form').submit();return false;" class="nav-link-signout" style="color: white;" type="submit">Sign out</a>
          </form>
        </li>
      </ul>
    </nav>
  
    <div class="container">
      <div class="row">
        <nav class="shadow col-md-2 md-offset-2 d-none d-md-block bg-light sidebar">
          <div class="sidebar-sticky">
            <ul class="nav flex-column">
              <li class="nav-item">
                <a class="nav-link" href="/users/dashboard">
                  <span data-feather="home"></span>
                  Dashboard
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/users/plants">
                  <span><img src="http://leia.cs.spu.edu:3001/source/plant" alt="Plant Icon"
                      onMouseOver="this.style.color='#0F0'" onMouseOut="this.style.color='#00F'"
                      class="feather plantIcon"></span>
                  Plants
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/users/devices">
                  <span data-feather="cpu"></span>
                  Devices
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/users/account">
                  <span data-feather="users"></span>
                  Account <span class="sr-only">(current)</span>
                </a>
              </li>
            </ul>
          </div>
        </nav>
  
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
          <h1 class="mb-3">Account Details</h1>
          <div class="row">
            <div class="col-md-8 order-md-1">
              <form action="/users/nameandpasswordchange" method="POST"
                class="login100-form validate-form p-l-55 p-r-55 p-t-178">
                <% include ./partials/messages %>
                <div class="row">
                  <div class="col-md-6 mb-6">
                    <p>Name:</p>
                    <input type="text" class="shadow form-control" name="user_name" id="user_name"
                      placeholder="Enter new name" value="<%= typeof user_name != 'undefined' ? user_name : '' %>">
                    <br>
                    <input type="hidden" name="old_user_name" id="old_user_name" value="<%= user_name %>">  
                    <div class="invalid-feedback">
                      Enter your name
                    </div>
                  </div>
                </div>
                <div class="mb-3">
                  <p>Email:</p>
                  <input readonly class="shadow form-control" type="text" name="user_email" id="user_email" value="<%= user_email %>">
                </div>
                <br>
                <br>
                <div class="mb-3">
                  <input type="password" class="shadow form-control" name="password" id="password"
                    placeholder="New password">
                  <div class="invalid-feedback">
                    Please enter your password
                  </div>
                </div>
  
                <div class="mb-3">
                  <input type="password" class="shadow form-control" name="password2" id="password2"
                    placeholder="Reenter new password">
                  <div class="invalid-feedback">
                    Please enter your password
                  </div>
                </div>
                <div class="form-group form-check">
                  <% if (notification) { %>
                    <input type="checkbox" class="form-check-input" name = "notificationsCheck" id="notificationsCheck" checked>
                    <label class="form-check-label" for="notificationsCheck">Enable Notifications</label>
                  <% } else { %> 
                    <input type="checkbox" class="form-check-input" name = "notificationsCheck" id="notificationsCheck" unchecked>
                    <label class="form-check-label" for="notificationsCheck">Enable Notifications</label>
                  <% } %>
                </div>
                <button type="submit" value="Submit" class="shadow-lg btn btn-success">Update</button>
              </form>
            </div>
          </div>
        </main>
        <!-- Bootstrap core JavaScript
      ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
          integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
          crossorigin="anonymous"></script>
        <script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery-slim.min.js"><\/script>')</script>
        <script src="http://leia.cs.spu.edu:3001/source/js/popper"></script>
        <script src="http://leia.cs.spu.edu:3001/source/js/min"></script>
  
        <!--Our JS (We may not need this..?Seems to work without it so far) -->
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
          integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
          crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
          integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
          crossorigin="anonymous"></script>
  
        <!-- Icons -->
        <script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
        <script>
          feather.replace()
        </script>
  </body>
</html>